{
    "pluginName": "SQL压缩工具",
    "description": "一款简洁高效的SQL压缩美化工具",
    "main": "index.html",
    "version": "0.1.0",
    "logo": "logo.png",
    "author": "SQLCompressTeam",
    "homepage": "https://github.com",
    "features": [
        {
            "code": "sql-compress",
            "explain": "SQL压缩/美化工具",
            "cmds": [
                "sql压缩",
                "sql美化",
                "sql格式化",
                "sqlcompress",
                "sqlformat",
                "压缩sql",
                "格式化sql",
                {
                    "type": "regex",
                    "label": "匹配SQL语句",
                    "match": "/\\s*(SELECT|INSERT|UPDATE|DELETE|CREATE|DROP|ALTER|WITH|TRUNCATE)\\s+.+/i",
                    "minLength": 10,
                    "maxLength": 100000
                }
            ]
        }
    ]
}